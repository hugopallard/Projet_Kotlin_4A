<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rotationX="38"
    tools:context=".fragments.ScanQRCodeFragment">

    <FrameLayout
        android:id="@+id/scanContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginStart="110dp"
            android:layout_marginTop="250dp"
            android:src="@drawable/arrow_down" />
        <TextView
            android:id="@+id/ScantextView"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginStart="110dp"
            android:layout_marginTop="450dp"
            android:text="Scan a QR code !"
            android:textSize="18sp"
            android:gravity="center"
            android:textStyle="bold"
            android:accessibilityPaneTitle="@string/bottom_sheet_behavior"
            android:fontFamily="serif"
            android:padding="8dp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/scanButton"
            android:layout_width="104dp"
            android:layout_height="84dp"
            android:layout_marginStart="160dp"
            android:layout_marginTop="350dp"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_qr" />
    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>